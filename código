class Heroi:
    def __init__(self, nome, idade, tipo):
        self.nome = nome
        self.idade = idade
        self.tipo = tipo

    def atacar(self):
        if self.tipo == "mago":
            ataque = "usou magia"
        elif self.tipo == "guerreiro":
            ataque = "usou espada"
        elif self.tipo == "monge":
            ataque = "usou artes marciais"
        elif self.tipo == "ninja":
            ataque = "usou shuriken"
        else:
            ataque = "fez um ataque desconhecido"
        
        print(f"O {self.tipo} atacou usando {ataque}")


heroi1 = new Heroi("Arthur", 30, "guerreiro")
heroi1.atacar() ;

heroi2 = new Heroi("Merlin", 150, "mago")
heroi2.atacar() ; 
